# Public site URL (used for unsubscribe links etc.)
NEXT_PUBLIC_SITE_URL=https://your-site.vercel.app

# NewsAPI (https://newsapi.org/)
NEWSAPI_KEY=your_newsapi_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# xAI / Grok (optional) - base URL + key for Grok-like endpoints
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE=https://api.grok.ai

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=notifications@yourdomain.com

# Twilio / WhatsApp (optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+1415XXXXXXX

# Supabase
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Scheduler secret (Vercel Cron or GitHub Action must include header x-scheduler-secret)
ACTION_SECRET=some-random-secret-value

# Optional for GitHub Actions fallback:
SITE_URL=https://your-site.vercel.app